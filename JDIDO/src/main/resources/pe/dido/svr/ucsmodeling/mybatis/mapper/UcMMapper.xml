<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="UcM">
	<resultMap id="UcMResult" type="UcM">
		<id     property="ucId"   column="UC_ID"/>
		<result     property="ucIdntfr"   column="UC_IDNTFR"/>
		<result     property="ucNm"   column="UC_NM"/>
		<result     property="sumry"   column="SUMRY"/>
		<result     property="chnge"   column="CHNGE"/>
		<result     property="adiMatter"   column="ADI_MATTER"/>
		<result     property="senario_dc"   column="SENARIO_DC"/>
		<result     property="refrnUcAt"   column="REFRN_UC_AT"/>
		<result     property="cmmnUcAt"   column="CMMN_UC_AT"/>
		<result     property="procsId"   column="PROCS_ID"/>
	</resultMap> 

  <select id="findById" parameterType="java.util.HashMap" resultMap="UcMResult">
    select *
    from UC_M
    where UC_ID = #{0,ucId}
  </select>
  <select id="findList" parameterType="java.util.HashMap" resultMap="UcMResult">
    select *
    from UC_M
  </select>
  <insert id="insert" parameterType="UcM">
    insert into UC_M (WORD_NM, 
    				  KR_NM, 
      				  EN_NM, 
      				  KR_ABRV, 
      				  EN_ABRV, 
     				  WORD_APPLC_SCOPE, 
     				  ETC_MATTER_DC, 
     				  WORD_DFN
      )
    values (#{wordNm,			jdbcType=VARCHAR}, 
    		#{krNm,				jdbcType=VARCHAR}, 
      		#{enNm,				jdbcType=VARCHAR}, 
      		#{krAbrv,			jdbcType=VARCHAR}, 
      		#{enAbrv,			jdbcType=VARCHAR}, 
      		#{wordApplcScope,	jdbcType=VARCHAR}, 
      		#{etcMatterDc,		jdbcType=VARCHAR}, 
      		#{wordDfn,			jdbcType=LONGVARCHAR}
      )
  <!--parameterType="java.lang.Integer"--> 
  </insert>
  <update id="update" parameterType="UcM">
    update UC_M
    <set>
      <if test="wordNm 			!= null">WORD_NM 			= #{wordNm,			jdbcType=VARCHAR},		</if>
      <if test="krNm 			!= null">KR_NM 				= #{krNm,			jdbcType=VARCHAR},		</if>
      <if test="enNm 			!= null">EN_NM 				= #{enNm,			jdbcType=VARCHAR},		</if>
      <if test="krAbrv 			!= null">KR_ABRV 			= #{krAbrv,			jdbcType=VARCHAR},		</if>
      <if test="enAbrv 			!= null">EN_ABRV 			= #{enAbrv,			jdbcType=VARCHAR},		</if>
      <if test="wordApplcScope  != null">WORD_APPLC_SCOPE 	= #{wordApplcScope,	jdbcType=VARCHAR},		</if>
      <if test="etcMatterDc 	!= null">ETC_MATTER_DC 		= #{etcMatterDc,	jdbcType=VARCHAR},		</if>
      <if test="wordDfn 		!= null">WORD_DFN 			= #{wordDfn,		jdbcType=LONGVARCHAR},	</if>
    </set>
    where UC_ID = #{ucId,jdbcType=INTEGER}
  </update>
  <delete id="delete" parameterType="java.lang.Integer">
    delete from UC_M
    where UC_ID = #{0,ucId}
  </delete>  
  
 </mapper>